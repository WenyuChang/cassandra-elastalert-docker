# Set this environment variable to true to set timezone on container start.
export SET_CONTAINER_TIMEZONE=false
# Default container timezone as found under the directory /usr/share/zoneinfo/.
export CONTAINER_TIMEZONE=UTC
# URL from which to download Elastalert.
export ELASTALERT_URL=https://github.com/Yelp/elastalert/archive/master.zip
# Directory holding configuration for Elastalert and Supervisor.
export CONFIG_DIR=/opt/config
# Elastalert rules directory.
export RULES_DIRECTORY=/opt/elastalert/rules
# Elastalert configuration file path in configuration directory.
export ELASTALERT_CONFIG=${CONFIG_DIR}/elastalert_config.yaml
# Directory to which Elastalert and Supervisor logs are written.
export LOG_DIR=/opt/logs
# Elastalert home directory name.
export ELASTALERT_DIRECTORY_NAME=elastalert
# Elastalert home directory full path.
export ELASTALERT_HOME=/opt/${ELASTALERT_DIRECTORY_NAME}
# Supervisor configuration file for Elastalert.
export ELASTALERT_SUPERVISOR_CONF=${CONFIG_DIR}/elastalert_supervisord.conf
# Alias, DNS or IP of Elasticsearch host to be queried by Elastalert. Set in default Elasticsearch configuration file.
export ELASTICSEARCH_HOST=data-elasticsearch-logging-staging.service.sntc01.ecsops.com
# Port on above Elasticsearch host. Set in default Elasticsearch configuration file.
export ELASTICSEARCH_PORT=9200


docker run -it -e ELASTICSEARCH_CASSANDRA_INDEX="staging-cassandra-*" -e ELASTICSEARCH_HOST=data-elasticsearch-logging-staging.service.sntc01.ecsops.com wenyu/cassandra-elastalert